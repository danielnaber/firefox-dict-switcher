{
    "name": "firefox-dict-switcher",
    "title": "Firefox Dictionary Switcher",
    "id": "firefox-dict-switcher@danielnaber.de",
    "icon": "data/img/dictionary.png",
    "description": "Based on the text entered in a textarea, this addon automatically detects the language and sets the corresponding spell checking dictionary.",
    "author": "Daniel Naber",
    "contributors": [
        "viraniac (https://www.freelancer.com/u/viraniacreturns.html)",
        "Ashraf Sabry (https://about.me/ashraf_sabry_m)"
    ],
    "license": "Apache-2.0",
    "version": "0.4",
    "preferences": [
        {
            "name": "english",
            "title": "English variant",
            "description": "The dictionary that will be used for spell checking English texts",
            "type": "menulist",
            "value": "en-US",
            "options": [
                {
                    "value": "en-US",
                    "label": "United States"
                },
                {
                    "value": "en-GB",
                    "label": "Great Britain"
                },
                {
                    "value": "en-ZA",
                    "label": "South Africa"
                },
                {
                    "value": "en-CA",
                    "label": "Canada"
                },
                {
                    "value": "en-AU",
                    "label": "Australia"
                },
                {
                    "value": "en-NZ",
                    "label": "New Zealand"
                }
            ]
        },
        {
            "name": "german",
            "title": "German variant",
            "description": "The dictionary that will be used for spell checking German texts",
            "type": "menulist",
            "value": "de-DE",
            "options": [
                {
                    "value": "de-DE",
                    "label": "Germany"
                },
                {
                    "value": "de-AT",
                    "label": "Austria"
                },
                {
                    "value": "de-CH",
                    "label": "Switzerland"
                }
            ]
        },
        {
            "name": "portuguese",
            "title": "Portuguese variant",
            "description": "The dictionary that will be used for spell checking Portuguese texts",
            "type": "menulist",
            "value": "pt-BR",
            "options": [
                {
                    "value": "pt-BR",
                    "label": "Brazil"
                },
                {
                    "value": "pt-PT",
                    "label": "Portugal"
                }
            ]
        },

        {
            "name": "editPreferedDictionary",
            "type": "control",
            "title": "Preferred dictionaries",
            "label": "Manage"
        },
        {
            "name": "preferences",
            "type": "string",
            "title": "Preferred dictionaries",
            "hidden": true
        }
    ]
}
